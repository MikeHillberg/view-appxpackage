{
  "displayName": "Find Packages by Property",
  "description": "Searches MSIX/AppX packages containing specific property values",
  "id": "FindPackagesContainingProperty",
  "parameters": [
    {
      "name": "propertyName",
      "type": "string",
      "description": "The property name to search for (e.g., Name, DisplayName, Publisher)",
      "required": true
    },
    {
      "name": "propertyValue",
      "type": "string", 
      "description": "The property value to search for",
      "required": true
    }
  ],
  "examples": [
    {
      "phrase": "Find packages with {propertyName} containing {propertyValue}",
      "intent": "FindPackagesContainingProperty",
      "parameters": {
        "propertyName": "{propertyName}",
        "propertyValue": "{propertyValue}"
      }
    },
    {
      "phrase": "Search packages by {propertyName} for {propertyValue}",
      "intent": "FindPackagesContainingProperty", 
      "parameters": {
        "propertyName": "{propertyName}",
        "propertyValue": "{propertyValue}"
      }
    }
  ]
}